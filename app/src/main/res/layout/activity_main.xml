<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lifecounter.chrisli8.washington.edu.lifecounter.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="503dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <RelativeLayout
            android:id="@+id/player1"
            android:layout_width="368dp"
            android:layout_height="48dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:text="Player 1"
                android:textSize="20sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textViewPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="20sp"
                android:background="@drawable/back"
                android:padding="5dp"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/textView"
                android:layout_alignParentTop="true" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/textViewPoints"
                android:text="-" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/button"
                android:text="+" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/button2"
                android:text="-5" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/button3"
                android:text="+5" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/player2"
            android:layout_width="368dp"
            android:layout_height="48dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_below="@id/player1" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:text="Player 2"
                android:textSize="20sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textViewPointsP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="20sp"
                android:background="@drawable/back"
                android:padding="5dp"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/textView2"
                android:layout_alignParentTop="true" />

            <Button
                android:id="@+id/buttonP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/textViewPointsP2"
                android:text="-" />

            <Button
                android:id="@+id/button2P2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/buttonP2"
                android:text="+" />

            <Button
                android:id="@+id/button3P2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/button2P2"
                android:text="-5" />

            <Button
                android:id="@+id/button4P2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/button3P2"
                android:text="+5" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/player3"
            android:layout_width="368dp"
            android:layout_height="48dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_below="@id/player2" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:text="Player 3"
                android:textSize="20sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textViewPointsP3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="20sp"
                android:background="@drawable/back"
                android:padding="5dp"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/textView3"
                android:layout_alignParentTop="true" />

            <Button
                android:id="@+id/buttonP3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/textViewPointsP3"
                android:text="-" />

            <Button
                android:id="@+id/button2P3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/buttonP3"
                android:text="+" />

            <Button
                android:id="@+id/button3P3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/button2P3"
                android:text="-5" />

            <Button
                android:id="@+id/button4P3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/button3P3"
                android:text="+5" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/player4"
            android:layout_width="368dp"
            android:layout_height="48dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_below="@id/player3" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:text="Player 4"
                android:textSize="20sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textViewPointsP4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="20sp"
                android:background="@drawable/back"
                android:padding="5dp"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/textView4"
                android:layout_alignParentTop="true" />

            <Button
                android:id="@+id/buttonP4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/textViewPointsP4"
                android:text="-" />

            <Button
                android:id="@+id/button2P4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/buttonP4"
                android:text="+" />

            <Button
                android:id="@+id/button3P4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/button2P4"
                android:text="-5" />

            <Button
                android:id="@+id/button4P4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/button3P4"
                android:text="+5" />
        </RelativeLayout>

        <TextView
            android:id="@+id/loserView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
